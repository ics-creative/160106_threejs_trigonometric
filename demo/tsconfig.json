{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    // TSはECMAScript 5に変換
    "target": "ES2015",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2020",
    // node_modules からライブラリを読み込む
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
