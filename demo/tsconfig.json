{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2020",
    // node_modules からライブラリを読み込む
    "moduleResolution": "node",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ]
}
